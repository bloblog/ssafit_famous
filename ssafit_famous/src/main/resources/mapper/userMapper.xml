<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafit.pjt.model.dao.UserDao">

	<select id="selectUser" parameterType="User"
		resultType="User">
		SELECT user_id as userId, user_password as password
		FROM user
		WHERE user_id = #{userId} AND user_password = #{password}
	</select>

	<insert id="insertUser" parameterType="User">
		INSERT INTO user (user_id, user_password)
		VALUES (#{userId}, #{password})
	</insert>


</mapper>